<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_client_provider_tree" model="ir.ui.view">
        <field name="name">Client provider tree</field>
        <field name="model">client.provider</field>
        <field name="arch" type="xml">
            <tree string="Client Provider">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_client_provider">
        <field name="name">Client Provider</field>
        <field name="res_model">client.provider</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Client Provider"
        id="menu_client_provider"
        action="action_client_provider"
        parent="contacts.res_partner_menu_config"
    />

</odoo>