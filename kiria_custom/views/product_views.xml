    <record id="view_purchase_order_form_inherit_lot_id" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.lot_id</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='products']/field/tree/field[@name='product_qty']" position='before'>
                <field name="order_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="lot_id_block" invisible="1"/>
                <field name="lot_id"  context="{'default_product_id': product_id, 'default_company_id': company_id, 'default_order_id_purchase': order_id}"
                       force_save="1"  attrs="{'invisible': [('lot_id_block', '==', True)]}" domain="[('product_id','=', product_id)]"/>
            </xpath>
        </field>
    </record>

     <record id="view_picking_lot_id_form" model="ir.ui.view">
            <field name="name">delivery.stock.lot_id.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//notebook/page[@name='operations']/field/tree/field[@name='product_id']" position='after'>
                    <field name="lot_id_oc" force_save="1" attrs="{'invisible': [('lot_id_oc', '==', 'Vacio')]}"/>
                </xpath>
            </field>
     </record>

</odoo>
