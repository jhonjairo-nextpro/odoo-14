<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="product_template_form_kiria" model="ir.ui.view">
             <field name="name">product.template.event.form.inherit</field>
             <field name="model">product.template</field>
             <field name="inherit_id" ref="product.product_template_only_form_view" />
             <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="product_initials"/>
                    <field name="category_initials"/>
                    <field name="conventional_organic"/>
                    <field name="correlative" readonly="False" force_save="1"/>
                </xpath>
                 <xpath expr="//field[@name='use_expiration_date']" position="after">
                    <field name="correlative_lote"/>
                </xpath>

            </field>
        </record>

    <record id="product_template_form_kiria_correlative" model="ir.ui.view">
             <field name="name">product.template.event.form.inherit</field>
             <field name="model">product.template</field>
              <field name="inherit_id" ref="product.product_template_form_view"/>
             <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                     <page string="Correlative" name="Correlative">
                        <field name="correlative_lote_seq" widget="one2many">
                            <tree string="correlative" editable="bottom">
                                <field name="name" domain="[('client_provider', '=', 'P')]"/>
                                <field name="correlative_lote"/>
                                <field name="correlative_seq"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_production_form_inherit_kiria">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bom_id']" position="after">
                    <field name="observation"
                     style="color:red;" readonly="0" force_save="1"/>
                </xpath>
            </field>
        </record>

