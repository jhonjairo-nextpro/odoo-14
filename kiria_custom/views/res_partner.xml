<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_form_custom" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="client_provider" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                <field name="code_client_provider" readonly="False" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>
